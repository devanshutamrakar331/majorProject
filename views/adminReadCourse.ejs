<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
    <link
      href="https://cdn.jsdelivr.net/npm/remixicon@2.5.0/fonts/remixicon.css"
      rel="stylesheet"
    />
  </head>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    html,
    body {
      width: 100%;
      background: rgb(204, 231, 247);

      min-height: 100vh;
    }
    #main {
      width: 100%;
      min-height: 100vh;
    }
    .left {
      border: 1px solid black;
      width: 16%;
      position: fixed;
      height: 100vh;
      background: rgb(1, 8, 36);
    }
    .right {
      width: 84%;
      height: 100vh;
      position: relative;
      left: 16%;
    }
    .box {
      width: 100%;
      height: 150%;
      display: flex;
    }
    .admin-info {
      display: flex;
      color: white;
      align-items: center;
      justify-content: space-between;
      flex-direction: column;
      padding-top: 3vh;
      width: 100%;
      height: 30%;
    }
    .admin-photo {
      width: 10vw;
      border-radius: 50%;
      height: 20vh;
    }
    .admin-photo img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 50%;
    }
    .admin-info form {
      display: none;
    }
    .admin-section {
      width: 100%;
      height: 100%;
      display: flex;
      margin-top: 5vw;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
    }
    a {
      text-decoration: none;
      color: white;
    }
    a:hover {
      color: white;
    }
    .section {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      border-top: 1px solid white;
      border-bottom: 1px solid white;
      height: 20vh;
    }
    .section:hover {
      transition: 0.2s;
      background-color: rgb(4, 1, 14);
    }
    .course-crud-box {
      width: 90%;

      margin-left: 4vw;
      height: 70vh;
    }
    label {
      display: flex;
      margin: 1vh;
    }
    select {
      width: 10vw;
      padding: 1vh 1vw;
    }
    .add-course textarea {
      width: 50vw;
      outline: none;
      padding: 1vh 1vw;
      border: none;
      resize: none;
      font-family: gilroy;
      border-radius: 10px;
      height: 10vw;
    }
    input::file-selector-button {
      background: #000;
      color: white;
      margin-right: 1vw;

      font-family: gilroy;
      padding: 1vh 3vw;
      border-radius: 5px;
    }

    .add-course {
      width: 70vw;
      height: 95vh;
      display: flex;
      transition: 0.5s;
      display: none;
      flex-direction: column;
      justify-content: space-between;
      border-radius: 10px;
      margin-top: 2vw;
      font-family: gilroy;
    }

    #submit {
      padding: 1vh 3vw;
      border: none;
      border-radius: 5px;
      background: rgb(9, 199, 9);
      color: white;
    }
    .add-course input {
      outline: none;
      padding-left: 1vw;
      padding-top: 0.8vw;
      padding-bottom: 0.8vw;
      font-size: 1vw;
      width: 50vw;

      border-radius: 5px;
      border: none;
    }
    .courseContainer{
        width: 90%;
        margin-left: 15vh;
        height: fit-content;
    }
  </style>
  <body>
    <div id="main">
      <div class="box">
        <div class="left">
          <div class="admin-info">
            <div class="admin-photo">
              <img src="/images/files/<%=user.profilePic%>" alt="" />
              <form
                action="/adminphoto"
                method="post"
                enctype="multipart/form-data"
              >
                <input
                  type="file"
                  name="adminImage"
                  id=""
                  onchange="form.submit()"
                />
                <input type="submit" value="set image" />
              </form>
            </div>
            <h1 class="text-center pt-4 fs-5"><%=user.name%></h1>
            <div
              class="admin-section mt-lg-5 flex-column justify-content-between"
            >
              <div class="section"><a href="/adminDashboard">Home</a></div>
              <div class="section">
                <a href="/adminDashboard/categories">Category</a>
              </div>
              <div class="section">
                <a href="/adminDashboard/courses">Courses</a>
              </div>
              <div class="section">
                <a href="//adminDashboard/payments">Payments</a>
              </div>
            </div>
          </div>
        </div>
        <div class="right">
          <h1 class="text-center pt-4 fs-3">Admin Dashboard</h1>

          <h1 class="m-lg-5 fs-2">Courses</h1>
          <div class="courseContainer">
          <div class="card mb-5" style="width: 45rem">
  <img src="/images/files/<%=currentCourse.photo%>" class="card-img-top" alt="...">
  <div class="card-body">
    <h4>Name</h4>
    <h5 class="card-title"><%=currentCourse.name%></h5>
    <br>
    <h4>Description</h4>
    
    <p class="card-text"><%=currentCourse.desc%></p>
    <br>
    <h4>Type</h4>
    
    <p class="card-text"><%=currentCourse.type%></p>
    <br>
    <h4>Time</h4>
    
    <p class="card-text"><%=currentCourse.time%></p>
    <br>
    <h4>Price</h4>
    
    <p class="card-text"><%=currentCourse.price%></p>
    <br>
    <h4>Discount</h4>
    
    <p class="card-text"><%=currentCourse.discount%></p>
    <br>
    <h4>Instructor</h4>
    
    <p class="card-text"><%=currentCourse.instructor%></p>
    <br>
    <h4>Category</h4>
    
    <p class="card-text"><%=currentCourse.category%></p>
    <br>
    <h4>Start</h4>
    
    <p class="card-text"><%=currentCourse.start%></p>
    <br>
    <h4>Details</h4>
    
    <p class="card-text"><%=currentCourse.details%></p>

  </div>
  
  
</div>
  </div>
</div>
          </div>
        
          </div>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script>
      document
        .querySelector(".admin-photo")
        .addEventListener("click", function (dets) {
          document.querySelector(".admin-info form [type=file]").click();
        });
      var flag = false;
      document
        .querySelector(".add ")
        .addEventListener("click", function (dets) {
          if (flag === false) {
            flag = true;
            document.querySelector(".add-course").style.display = "flex";
            document.querySelector(".courses").style.display = "none";
          } else {
            flag = false;
            document.querySelector(".courses").style.display = "flex";

            document.querySelector(".add-course").style.display = "none";
          }
        });
      document
        .querySelector(".ri-close-line")
        .addEventListener("click", function (dets) {
          document.querySelector(".add-cat").style.display = "none";
        });
    </script>
  </body>
</html>
