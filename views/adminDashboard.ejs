<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Bootstrap demo</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />
  </head>
  <style>
    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }
    html,
    body {
      width: 100%;
      min-height: 100vh;
    }
    #main {
      width: 100%;
      height: 100%;
    }
    .left {
      border: 1px solid black;
      width: 16%;
      height: 100vh;
      background: rgb(1, 8, 36);
    }
    .right {
      width: 84%;
      height: 100vh;
      background: rgb(204, 231, 247);
    }
    .box {
      width: 100%;
      height: 100%;
      display: flex;
    }
    .admin-info {
      display: flex;
      color: white;
      align-items: center;
      justify-content: space-between;
      flex-direction: column;
      padding-top: 3vh;
      width: 100%;
      height: 30%;
    }
    .admin-photo {
      width: 10vw;
      border-radius: 50%;
      height: 20vh;
    }
    .admin-photo img {
      width: 100%;
      height: 100%;
      object-fit: cover;
      border-radius: 50%;
    }
    .admin-info form {
      display: none;
    }
    .admin-section {
      width: 100%;
      height: 100%;
      display: flex;
      margin-top: 5vw;
      flex-direction: column;
      align-items: center;
      justify-content: space-between;
    }
    a {
      text-decoration: none;
      color: white;
    }
    a:hover {
      color: white;
    }
    .section {
      width: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      border-top: 1px solid white;
      border-bottom: 1px solid white;
      height: 20vh;
    }
    .section:hover {
      transition: 0.2s;
      background-color: rgb(4, 1, 14);
    }
  </style>
  <body>
    <div id="main">
      <div class="box">
        <div class="left">
          <div class="admin-info">
            <div class="admin-photo">
              <img src="./images/files/<%=user.profilePic%>" alt="" />
              <form
                action="/adminphoto"
                method="post"
                enctype="multipart/form-data"
              >
                <input
                  type="file"
                  name="adminImage"
                  id=""
                  onchange="form.submit()"
                />
                <input type="submit" value="set image" />
              </form>
            </div>
            <h1 class="text-center pt-4 fs-5"><%=user.name%></h1>
            <div
              class="admin-section mt-lg-5 flex-column justify-content-between"
            >
              <div class="section"><a href="/adminDashboard">Home</a></div>
              <div class="section">
                <a href="/adminDashboard/categories">Category</a>
              </div>
              <div class="section">
                <a href="/adminDashboard/courses">Courses</a>
              </div>
              <div class="section">
                <a href="/adminDashboard/payments">Payments</a>
              </div>
            </div>
          </div>
        </div>
        <div class="right">
          <h1 class="text-center pt-4 fs-3">Admin Dashboard</h1>
        </div>
      </div>
    </div>
    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa"
      crossorigin="anonymous"
    ></script>
    <script>
      document
        .querySelector(".admin-photo")
        .addEventListener("click", function (dets) {
          document.querySelector(".admin-info form [type=file]").click();
        });
    </script>
  </body>
</html>
